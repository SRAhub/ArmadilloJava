<!-- Used only for travis ci -->
<project name="ArmadilloJava" default="test" basedir=".">
  <!-- set global properties for this build -->
  <property name="src.dir" location="src"/>
  <property name="lib.dir" location="lib"/>
  
  <property name="build.dir"   location="build"/>
  <property name="classes.dir" location="${build.dir}/classes"/>
  <property name="jar.dir"     location="${build.dir}/jar"/>

  <path id="classpath">
      <fileset dir="${lib.dir}" includes="**/*.jar"/>
  </path>
  
  <target name="clean">
    <!-- Delete the ${build.dir} directory tree -->
    <delete dir="${build.dir}"/>
  </target>
  
  <target name="init">
    <!-- Create the ${build.dir} directory structure used by compile -->
    <mkdir dir="${build.dir}"/>
  </target>

  <target name="compile" depends="init">
  <!-- Create the ${classes.dir} directory -->
  <mkdir dir="${classes.dir}"/>
    <!-- Compile the java code from ${src} into ${build} -->
    <javac srcdir="${src.dir}" destdir="${classes.dir}" classpathref="classpath"/>
  </target>

  <target name="test" depends="clean,compile">
    <!-- Create the ${jar.dir} directory -->
    <mkdir dir="${jar.dir}"/>
    <!-- Put everything in ${jar.dir} into the ${ant.project.name}.jar file -->
    <jar jarfile="${jar.dir}/${ant.project.name}.jar" />
  </target>
</project>
